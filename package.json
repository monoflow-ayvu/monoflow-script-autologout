{
  "name": "autologout",
  "version": "0.7.0",
  "description": "Script para deslogar automaticamente, baseado no estado do IO ou na atividade do usuario.",
  "settingsSchema": {
    "display": "form",
    "components": [
      {
        "label": "Tempo padrão até deslogar",
        "suffix": "minutos",
        "mask": false,
        "tableView": false,
        "defaultValue": 1,
        "delimiter": false,
        "requireDecimal": false,
        "inputFormat": "plain",
        "truncateMultipleSpaces": false,
        "validate": {
          "required": true,
          "min": 0,
          "max": 300
        },
        "key": "minTimeForLogout",
        "type": "number",
        "decimalLimit": 0,
        "input": true
      },
      {
        "label": "Ativar logout baseado em atividade?",
        "tableView": false,
        "key": "enableActivityLogout",
        "type": "checkbox",
        "input": true,
        "defaultValue": false
      },
      {
        "label": "Atividades",
        "reorder": false,
        "addAnotherPosition": "bottom",
        "layoutFixed": false,
        "enableRowGroups": false,
        "initEmpty": false,
        "tableView": false,
        "defaultValue": [
          {
            "atividade": "STILL",
            "confidence": ""
          }
        ],
        "key": "activities",
        "conditional": {
          "show": true,
          "when": "enableActivityLogout",
          "eq": "true"
        },
        "type": "datagrid",
        "input": true,
        "components": [
          {
            "label": "Atividade",
            "widget": "choicesjs",
            "tableView": true,
            "defaultValue": "STILL",
            "data": {
              "values": [
                {
                  "label": "IN_VEHICLE",
                  "value": "IN_VEHICLE"
                },
                {
                  "label": "ON_BICYCLE",
                  "value": "ON_BICYCLE"
                },
                {
                  "label": "ON_FOOT",
                  "value": "ON_FOOT"
                },
                {
                  "label": "RUNNING",
                  "value": "RUNNING"
                },
                {
                  "label": "STILL",
                  "value": "STILL"
                },
                {
                  "label": "TILTING",
                  "value": "TILTING"
                },
                {
                  "label": "UNKNOWN",
                  "value": "UNKNOWN"
                },
                {
                  "label": "WALKING",
                  "value": "WALKING"
                }
              ]
            },
            "validate": {
              "required": true
            },
            "key": "activity",
            "type": "select",
            "input": true
          },
          {
            "label": "Nível Certeza",
            "placeholder": "0-100%",
            "mask": false,
            "tableView": false,
            "delimiter": false,
            "decimalLimit": 0,
            "requireDecimal": false,
            "inputFormat": "plain",
            "truncateMultipleSpaces": false,
            "validate": {
              "required": true,
              "min": 0,
              "max": 100
            },
            "key": "confidence",
            "type": "number",
            "input": true
          }
        ]
      },
      {
        "label": "Ativar logout baseado em regra monoflow?",
        "tableView": false,
        "key": "enableMonoflowLogout",
        "type": "checkbox",
        "input": true,
        "defaultValue": false
      },
      {
        "label": "Regras Monoflow",
        "reorder": false,
        "addAnotherPosition": "bottom",
        "layoutFixed": false,
        "enableRowGroups": false,
        "initEmpty": false,
        "tableView": false,
        "defaultValue": [
          {}
        ],
        "key": "monoflowRules",
        "conditional": {
          "show": true,
          "when": "enableMonoflowLogout",
          "eq": "true"
        },
        "type": "datagrid",
        "input": true,
        "components": [
          {
            "label": "Regra",
            "mask": false,
            "tableView": false,
            "delimiter": false,
            "decimalLimit": 0,
            "requireDecimal": false,
            "inputFormat": "plain",
            "truncateMultipleSpaces": false,
            "validate": {
              "required": true,
              "min": 0,
              "max": 29
            },
            "key": "rule",
            "type": "number",
            "input": true
          },
          {
            "label": "Estado",
            "widget": "choicesjs",
            "tableView": true,
            "data": {
              "values": [
                {
                  "label": "Ativa",
                  "value": "enabled"
                },
                {
                  "label": "Inativa",
                  "value": "disabled"
                }
              ]
            },
            "validate": {
              "required": true
            },
            "key": "state",
            "type": "select",
            "input": true
          }
        ]
      },
      {
        "label": "Regras especiais",
        "reorder": false,
        "addAnotherPosition": "bottom",
        "layoutFixed": false,
        "enableRowGroups": false,
        "initEmpty": true,
        "tableView": false,
        "defaultValue": [
          {
            "tag": ""
          }
        ],
        "key": "specialRules",
        "type": "datagrid",
        "input": true,
        "components": [
          {
            "label": "Tag",
            "tableView": true,
            "validate": {
              "required": true
            },
            "key": "tag",
            "type": "textfield",
            "input": true
          },
          {
            "label": "Ação",
            "widget": "choicesjs",
            "tableView": true,
            "data": {
              "values": [
                {
                  "label": "Límite de tempo diferente",
                  "value": "customTimeLimit"
                },
                {
                  "label": "Desativar autologout",
                  "value": "disableAutoLogout"
                }
              ]
            },
            "validate": {
              "required": true
            },
            "key": "action",
            "type": "select",
            "input": true
          },
          {
            "label": "Minutos",
            "mask": false,
            "tableView": false,
            "defaultValue": 5,
            "delimiter": false,
            "requireDecimal": false,
            "inputFormat": "plain",
            "truncateMultipleSpaces": false,
            "validate": {
              "required": true
            },
            "key": "minutes",
            "conditional": {
              "show": true,
              "when": "specialRules.action",
              "eq": "customTimeLimit"
            },
            "type": "number",
            "input": true
          }
        ]
      },
      {
        "type": "button",
        "label": "Submit",
        "key": "submit",
        "disableOnInvalid": true,
        "input": true,
        "tableView": false
      }
    ]
  },
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "webpack --mode production",
    "watch": "webpack --mode production --watch",
    "build-copy": "yarn build && (cat dist/bundle.js | pbcopy) && du -sh dist/*.js",
    "size": "npm run build && size-limit",
    "deploy": "node .scripts/deploy.js",
    "deploy-force": "node .scripts/deploy.js --force",
    "minor": "npm run build && bump minor --commit --tag --push --all",
    "release": "npm run build && bump major --commit --tag --push --all",
    "test": "jest"
  },
  "browserslist": [
    "ie 6"
  ],
  "size-limit": [
    {
      "path": "dist/bundle.js",
      "limit": "100 kb",
      "gzip": false
    }
  ],
  "devDependencies": {
    "@babel/core": "7.24.9",
    "@babel/plugin-transform-arrow-functions": "7.24.7",
    "@babel/preset-env": "7.24.8",
    "@babel/preset-typescript": "7.24.7",
    "@jsdevtools/version-bump-prompt": "6.1.0",
    "@size-limit/preset-big-lib": "11.1.4",
    "@types/commander": "2.12.2",
    "@types/firebase": "3.2.1",
    "@types/jest": "27.5.2",
    "@types/lodash": "4.17.7",
    "@types/node": "^20.0.0",
    "@types/uuid": "10.0.0",
    "babel-loader": "9.1.3",
    "brotli-webpack-plugin": "1.1.0",
    "commander": "12.1.0",
    "compression-webpack-plugin": "11.1.0",
    "graphql": "16.9.0",
    "graphql-request": "7.1.0",
    "inquirer": "10.1.0",
    "jest": "29.7.0",
    "mobx-keystone": "1.10.2",
    "semver": "7.6.3",
    "size-limit": "11.1.4",
    "ts-loader": "9.5.1",
    "typed-emitter": "2.1.0",
    "typescript": "4.9.5",
    "webpack": "5.93.0",
    "webpack-cli": "5.1.4"
  },
  "dependencies": {
    "@fermuch/monoutils": "0.2.0",
    "@fermuch/telematree": "9.23.0",
    "cross-fetch": "3.1.8",
    "firebase": "9.23.0",
    "lodash": "4.17.21",
    "mobx": "6.13.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "web.js",
      "js",
      "web.ts",
      "ts",
      "web.tsx",
      "tsx",
      "json",
      "web.jsx",
      "jsx",
      "node"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/private/jest/setup.ts"
    ]
  }
}
